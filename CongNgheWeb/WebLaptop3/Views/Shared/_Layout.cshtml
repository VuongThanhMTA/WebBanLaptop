                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            @using (Html.BeginForm("KetQuaTimKiem", "TimKiem",FormMethod.Post))
                            {
                                <select class="input-select" name="cbLoaiTimKiem">
                                    <option value="0">Tất cả</option>
